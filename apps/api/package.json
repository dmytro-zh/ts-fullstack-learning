{
  "name": "api",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "rimraf prisma/dev.db && pnpm run prisma:migrate --name init && pnpm run db:seed",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run src/**/*.unit.test.ts src/**/__tests__/unit/**/*.test.ts --passWithNoTests",
    "test:integration": "cross-env NODE_ENV=test dotenv -e .env.test -- vitest run src/__tests__/integration --passWithNoTests",
    "db:migrate:test": "dotenv -e .env.test -- prisma migrate deploy",
    "test:integration:ci": "pnpm run db:migrate:test && pnpm run test:integration",
    "test:gql": "vitest run src/__tests__/graphql"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@apollo/utils.withrequired": "^3.0.0",
    "@as-integrations/express4": "^1.1.2",
    "@panva/hkdf": "^1.2.1",
    "@prisma/client": "^6.16.2",
    "@ts-fullstack-learning/shared": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.22.1",
    "graphql": "^16.11.0",
    "multer": "^2.0.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.13",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "jose": "^5.10.0",
    "prisma": "^6.16.2",
    "tsx": "^4.20.5",
    "typescript": "^5",
    "vitest": "^4.0.14"
  }
}
